    public void onMyButtonClick(View view) {
        guardar();
    }
    public void guardar() {
    	String nombre =new String("Ignacio");
        //editText.setText("");

      //  final DateFormat df = DateFormat.getDateTimeInstance(DateFormat.MEDIUM, DateFormat.MEDIUM);
       // String comment = "Added on " + df.format(new Date());
